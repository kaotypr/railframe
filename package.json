{
  "name": "railframe",
  "version": "1.1.1",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --no-clean",
    "prepare": "npm run build && lefthook install",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --apply .",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "keywords": ["railframe", "iframe", "postmessage", "postmessage-api"],
  "author": "Adhitya Yosua Sanjaya Andaria",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kaotypr/railframe.git"
  },
  "homepage": "https://github.com/kaotypr/railframe#readme",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@types/node": "^22.13.1",
    "lefthook": "^1.10.10",
    "standard-version": "^9.5.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@kaotypr/liblog": "^1.1.3"
  }
}
